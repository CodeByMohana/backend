<% layout('layout/boilerplate.ejs') -%>
    <div class="container d-flex flex-wrap justify-content-start" style="gap: 25px;">
        <% for (let product of products){ %>
            <div class="card" style="width: 18rem; margin-top: 15px;">
                <img style="height: 200px;object-fit: cover;" src="<%= product.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= product.name %>
                    </h5>
                    <h6 class="card-title">
                        <%= product.price %>
                    </h6>
                    <p class="card-text">
                        <%= product.description %>
                    </p>
                    <div class="d-flex gap-2">
                        <a href="/products/<%= product._id %>/edit" class="btn btn-warning">Edit</a>
                        <form action="/products/<%= product._id %>?_method=DELETE" method="post">
                          <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                      </div>
                </div>
            </div>
            <% } %>
    </div>